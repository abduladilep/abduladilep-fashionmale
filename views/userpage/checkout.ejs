                } else {

console.log("svssad",(parseInt(document.getElementById('grandtotal').innerHTML)));
console.log("gffff",discount.minAmount);

                    if(parseInt(document.getElementById('grandtotal').innerHTML)>discount.minAmount){
                      
                        

