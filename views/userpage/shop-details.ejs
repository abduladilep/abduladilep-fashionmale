        <div class="modal fade" id="exampleModall<%= details._id%>" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"></h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <% if(user){ %>
                    <div class="modal-body">
                        Item added to your Cart successfully...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-dark" onclick="cartList('<%= details._id %>')"
                            data-dismiss="modal">
                            Add To Cart</button>
                    </div>
                    <%} else {%>
                    <div class="modal-body text-danger">
                        You are not logged in !!
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-dark" 
                            data-bs-dismiss="modal"><a href="/userLogin">
                            Go to Login Page</a></button>
                    </div>
                    <% } %>

                </div>
            </div>
        </div>


       


        
    <script>
        function cartList(id) {

          
            fetch('/cart/addToCart', {
                method: 'post',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id })

            })
                .then(res => res.json())
            // swal({
            //     title: "Add to Cart!",
            //     text: "",
            //     icon: "success",
            //     button: "Done",
            // });
        }





        function wishlist(id) {

            fetch('/wishlist/addToWishlist/', {

                method: 'post',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ id })
            })
                .then(res => res.json())
                .then(data => {
                     (data.success == true) 
                        swal({
                            title: "Add to Whishlist",
                            text: "",
                            icon: "success",
                            button: "Done",
                        });
                    
                     })
                  
                
        }
    </script>


