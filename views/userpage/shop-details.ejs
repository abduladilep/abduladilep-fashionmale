                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Wishlist Item</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <% if(user) { %>
                        <div id="message" class="modal-body text-success">
                            Item added to your Wishlist successfully...
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                           <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                        </div>
                        <% } else { %>
                            <div class="modal-body text-danger">
                                You are not logged in !!!
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-secondary" 
                                    data-bs-dismiss="modal"><a href="/userLogin">
                                    Go to Login Page</a></button>
                            </div>
                            <% } %>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>


                                </div>
