</nav>
  <div class="container mt-5 mr-5">
    <div class="row tm-content-row">
      <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-products text-center">
          <div class="tm-product-table-container">
            <table class="table table-hover tm-table-small tm-product-table">
              <thead>
                <tr>
                  <th scope="col">&nbsp;</th>
                  <th scope="col">PRODUCT NAME</th>
                  <th scope="col">DESCRIPTION</th>
                  <th scope="col">IN STOCK</th>
                  <th scope="col">PRICE</th>
                  <th scope="col">IMAGE</th>
                  <th scope="col">&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <% for( datas of product){ %>
                  <tr>
                    <th scope="row">
                      <% %>
                    </th>
                    <td>
                      <%=datas.product_name%>
                    </td>
                    <td>
                      <%=datas.product_description%>
                    </td>
                    <td>
                      <%= datas.stock %>
                    </td>
                    <td>
                      <%= datas.product_price %>
                    </td>
                    <td>
                      <% if( datas.image[0]){%>
                      <img src="<%= datas.image[0].url%>" style="width: 4em;height: 4em;"> </td>

                      <%}%>

                    <td>
                      <form action="/product/deleteProduct/<%= datas._id %>?_method=PUT" method="post"><button
                          class="btn btn-primary " type="submit"
                          onclick="return confirm('Do you want to delete <%= datas.product_name%>?')">Remove</button>
                      </form>
                    </td>
                    <td> <a href="/product/productedit/<%=datas._id%>" class="btn btn-primary btn-block text-uppercase ">Edit
                        Product</a></td>
                    <td>
                      <%}%>
                    </td>

              </tbody>
            </table>
          </div>
          <!-- table container -->
          <a href="/product/addProduct" class="btn btn-primary btn-block text-uppercase mb-3">Add new product</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="tm-footer row tm-mt-small">
