        <div class="container-fluid ">
          <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
              <tr>
                <th>Order Id</th>
  
                
                <th>Address</th>
                <th>Payment Method</th>
                <th>Payment Status</th>
                <th>Bill</th>
                <th>Order Status</th>
                <th>Date</th>
                <th>Items</th>
              </tr>
            </thead>
  
  
            <tbody>
              <% for(let order of orderData) { %>
                <tr>
                  <td>
                    <% if(order.orderStatus[0].type=='Delivered' || order.orderStatus[0].type=='Cancelled' ){ %>
                      <%= order._id %>
                        <% } else { %>
                          <%= order._id %>
                  </td>
                  <% } %>
                   
                    <td>
                      <%= order.address %> Pcs
                    </td>
                    <td>
                      <%= order.paymentStatus %>
                    </td>
                    <% if(order.isCompleted==true) { %>
                      <td>Completed</td>
                      <% } else{ %>
                        <td>Pending</td>
                        <% } %>
                          <td>Rs.<%= order.bill %>
                          </td>
                          <td>
                            <%= order.orderStatus[0].type %>
                          </td>
                          <td>
                            <%= order.orderStatus[0].date.toLocaleDateString() %>
                          </td>
                          <td> <button data-bs-toggle="modal" class="btn btn-success rounded"
                              onclick="products('<%= order._id %>')" data-bs-target="#exampleModal<%=order._id%>">Items</button></td>
                </tr>
                <% } %>
            </tbody>
          </table>
